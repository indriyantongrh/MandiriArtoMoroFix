<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplasScreen1">


    <TextView
        android:id="@+id/textGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:paddingTop="80dp"
        android:paddingBottom="30dp"
        android:text="Connect and Help Each Other to Nearby folks "
        android:textColor="@android:color/black"
        android:textSize="23sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="0dp"
        android:paddingHorizontal="10dp"
        android:layout_below="@+id/textGrid"
        android:src="@drawable/splashscreen1" />



    <Button
        android:id="@+id/btnnext1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/image12"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/gradienbiru"
        android:elevation="10dp"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:text="Next"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold" />




</RelativeLayout>