<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestMoney.RequestMoney">



    <ImageView
        android:id="@+id/image12"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="2dp"
        android:paddingHorizontal="10dp"
        android:src="@drawable/artomoro" />



    <LinearLayout
        android:id="@+id/kotak"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/image12"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="20dp">


        <ImageView
            android:id="@+id/imageView25"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:adjustViewBounds="true"
            android:visibility="gone"
            android:src="@drawable/artomoro" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/txtusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:inputType="none"
                android:editable="false"
                android:drawableLeft="@drawable/ic_accountnumber"
                android:ems="50"
                android:text="9864527283555"
                android:hint="@string/hint_accountnumber"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack"
                android:textSize="17sp"/>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/txtamount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtuser"
                android:layout_alignStart="@+id/txtuser"
                android:layout_below="@+id/txtuser"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_ammount"
                android:ems="50"
                android:hint="@string/hint_ammount"
                android:singleLine="true"
                android:inputType="number"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack"
                android:textSize="17sp" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btnnext3"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/kotak"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/gradienbiru"
        android:elevation="10dp"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:text="Next"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold" />


</RelativeLayout>