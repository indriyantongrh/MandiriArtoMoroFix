<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mapmarker"
    tools:context=".RequestMoney.RecivedMoney">




    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:padding="3dp">

        <android.support.v7.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="#00ffffff"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPutih">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:background="@color/colorPutih">

                    <ImageView
                        android:id="@+id/image12"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginBottom="0dp"
                        android:paddingHorizontal="0dp"
                        android:src="@drawable/group32" />

                    <TextView
                        android:id="@+id/textGrid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/image12"
                        android:layout_marginTop="0dp"
                        android:fontFamily="@font/roboto_light"
                        android:gravity="center"
                        android:paddingBottom="110dp"
                        android:text="Hore ! Putri is Helping you with \n Rp. 100.000"
                        android:textColor="@android:color/black"
                        android:textSize="23sp"
                        android:textStyle="bold" />



                    <Button
                        android:id="@+id/btnterimauang"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textGrid"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginBottom="50dp"
                        android:backgroundTint="@color/colorBiru"
                        android:text="Reciver a Cash" />


                    <Button
                        android:id="@+id/btnwa"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="230dp"
                        android:layout_marginTop="0dp"
                        android:layout_below="@+id/textGrid"
                        android:backgroundTint="@color/colorBiru"
                        android:text="Chat Whatsapp" />

                </RelativeLayout>






                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignEnd="@+id/image"
                    android:layout_alignRight="@+id/image"
                    android:layout_centerVertical="true"
                    android:elevation="6dp"
                    android:visibility="invisible" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>



    </RelativeLayout>

</RelativeLayout>